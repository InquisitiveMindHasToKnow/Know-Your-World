<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.MainActivity">


<LinearLayout
    android:id="@+id/main_page_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackgroundColor"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>


<ImageView
    android:id="@+id/globe_imageview"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="80dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:id="@+id/top_button_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/globe_imageview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/study_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:background="@color/buttonColor"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:textAllCaps="false"
            android:text="Study" />

        <Button
            android:id="@+id/quiz_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:background="@color/buttonColor"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:textAllCaps="false"
            android:text="Quiz" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_button_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/top_button_linear"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/randomize_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:background="@color/buttonColor"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:textAllCaps="false"
            android:text="Randomize" />

        <Button
            android:id="@+id/favorites_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:background="@color/buttonColor"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:textAllCaps="false"
            android:text="Favorites" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>