<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/favorite_country_individual_game_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:background="#F7EFCE"
        app:cardCornerRadius="8dp">


        <LinearLayout
            android:id="@+id/favorite_country_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7EFCE"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <WebView
                android:id="@+id/favorite_country_flag_webview"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                 />

            <TextView
                android:id="@+id/favorite_country_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="#112631"
                android:layout_marginBottom="30dp"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold|italic"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>